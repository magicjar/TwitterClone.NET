@page "/"
@inject NavigationManager NavManager

<PageTitle>Index</PageTitle>

<div class="container-fluid">
    <div class="row g-5">
        <div class="col-12 col-lg-7 hero">
            <div class="d-flex">
                <figure class="figure align-items-center justify-content-center" style="max-width: 300px;">
                    <img src="/images/logo.jpg" class="figure-img img-fluid rounded" alt="Site Logo">
                    <figcaption class="figure-caption text-center">Logo by <a
                            href="https://dribbble.com/shots/15558186-Humming-Bird-Logo-Not-for-sale"
                            target="_blank">Yoga
                            Perdana</a>.</figcaption>
                </figure>
            </div>
        </div>
        <div class="col-12 col-lg-5 actions">
            <h1>Write your stories!</h1>
            <div class="signup w-50">
                <h2 class="h3">Join Now!</h2>
                <div class="d-grid gap-2">
                    <a class="btn btn-primary rounded-pill" href="Identity/Account/Register">Sign up with Google</a>
                    <hr class="my-2">
                    <a class="btn btn-primary rounded-pill" href="Identity/Account/Register">Sign up with Email</a>
                </div>
            </div>
            <div class="signin w-50 mt-5">
                <h3 class="h5">Already have an account?</h3>
                <div class="d-grid gap-0">
                    <a class="btn btn-primary rounded-pill" href="Identity/Account/Login">Sign in</a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var user = (await AuthenticationStateTask).User;
        if (user.Identity.IsAuthenticated)
        {
            NavManager.NavigateTo("/home");
        }
    }
}